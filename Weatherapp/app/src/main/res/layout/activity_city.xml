<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="20dp"
    android:orientation="vertical"
    android:background="#F9F9F9"
   >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="20dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature: 24Â°C"
                android:textSize="16sp"
                android:textColor="#333333"
                android:drawableLeft="@drawable/ic_temperature"
                android:drawablePadding="12dp" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity: 60%"
                android:textSize="16sp"
                android:textColor="#333333"
                android:drawableLeft="@drawable/ic_humidity"
                android:drawablePadding="8dp"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind: 15 km/h"
                android:textSize="16sp"
                android:textColor="#333333"
                android:drawableLeft="@drawable/ic_wind"
                android:drawablePadding="8dp"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rain: 10 mm"
                android:textSize="16sp"
                android:textColor="#333333"
                android:drawableLeft="@drawable/ic_rain"
                android:drawablePadding="8dp"
                android:layout_marginTop="12dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
