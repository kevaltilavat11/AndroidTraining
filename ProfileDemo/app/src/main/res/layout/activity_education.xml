<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/educationSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education Details"
            android:layout_marginVertical="12dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_education"
            android:drawablePadding="8dp"
            />

        <TextView android:text="SSC/HSC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:textStyle="bold"
            />
        <Spinner
            android:id="@+id/spinnerSsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/ssc_options" />

        <TextView
            android:id="@+id/tvSscPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:textStyle="bold"
            android:text="Percentage: 0%" />
        <SeekBar
            android:id="@+id/seekBarSsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <TextView android:text="BCA/B.COM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:textStyle="bold"
            />
        <Spinner
            android:id="@+id/spinnerBca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/bca_options"
            android:paddingVertical="5dp"
            />

        <TextView
            android:id="@+id/tvBcaPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Percentage: 0%"
            android:textStyle="bold"
            android:paddingVertical="5dp"
            />
        <SeekBar
            android:id="@+id/seekBarBca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:paddingVertical="5dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEduSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            style="@style/Widget.Material3.Button"
            android:layout_marginTop="16dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>